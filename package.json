{
	"name": "typescript-express-api",
	"version": "1.0.0",
	"private": true,
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"start": "bun run src/server.ts",
		"dev": "bun --watch run src/server.ts",
		"build": "bun build ./src/server.ts --outdir ./dist --target bun",
		"lint": "eslint src/**/*.ts",
		"format": "prettier --write \"src/**/*.ts\"",
		"test": "bun test"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"envalid": "^8.0.0",
		"express": "^4.18.2",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"xss": "^1.0.15",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.4",
		"@typescript-eslint/eslint-plugin": "^6.13.2",
		"@typescript-eslint/parser": "^6.13.2",
		"bun-types": "latest",
		"eslint": "^8.55.0",
		"prettier": "^3.1.0",
		"typescript": "^5.3.3"
	}
}
